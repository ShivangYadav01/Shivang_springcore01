<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        <!-- Abstract beans allow you to define common properties and
        configurations once and reuse them across multiple beans-->
              
       <bean id="p1" abstract="true">
       <property name="companyName" value="DUCAT"/>
       <property name="empId" value="101"/>       
       </bean> 
        
        <bean id="child" class="com.springcore.model.Child"
        parent="p1">
        <property name="salary" value="22000"/>
        <property name="age" value="22"/>   
        </bean>
        
        
        
</beans>    