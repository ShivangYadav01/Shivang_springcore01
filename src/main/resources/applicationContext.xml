<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean name="add" class="com.springcore.model.Address">
	<property name="city" value ="Noida"/>
	<property name ="state" value="UP"/>
	</bean>
 
 
	<!--bean name="emp" class="com.springcore.model.Employee" autowire="byType"> Scope can be used to give scope to a bean -by default it is
	 singleton and  we can convert it to "prototype"
	-->
	<bean name="emp" class="com.springcore.model.Employee" autowire="byType">
		<property name="id" value="111" />
		<property name="name" value="Guest" />
		<property name="gender" value="Male" />
 	<property name="address">
 	<bean class="com.springcore.model.Address">
 	<property name="city" value="Lucknow"/>
 	<property name="state" value="UP"/>
 	
 	
 	</bean>
 	</property>
	</bean>



